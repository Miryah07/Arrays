import java.util.Arrays;
import java.util.Scanner;


public class Ch3 {

	public static void main(String[] args) {

		//Create scanner
		Scanner input = new Scanner(System.in);

		//Create an array to hold user input
		int [] numbers = new int[3];

		//populate array with user input
		for (int i=0; i < numbers.length; i++){
			System.out.println("Please enter numbers to be sorted: ");
			numbers[i] = input.nextInt();

			//print array contents
			System.out.println("The numbers you entered are: " + Arrays.toString(numbers));

			//sort array
			Arrays.sort(numbers);
			
			//display results
			System.out.println("The sorted number in ascending order are: " + Arrays.toString(numbers));




		}


	}

}
